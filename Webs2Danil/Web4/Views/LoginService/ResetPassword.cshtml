@model Web4.Models.SecondRegisterStageModel

@{
    ViewData["Title"] = "Reset your password";
}

<style>
#Button{
    margin-top:15px;
}
</style>


<div>
    <h1>Reset your password</h1>
    @ViewBag.testCode
    @ViewBag.error
    <form method = "post" id="formTextBox" name="formTextBox" action="">
     <div id="InputDiv">
            <label for="input">Password</label>
            <input type="password" asp-for="password" class="form-control" id="input"/>
            <span asp-validation-for="password"></span>
        </div>

        <div id="InputDiv">
            <label for="input">Confirm password</label>
            <input type="password" asp-for="confirmPassword" class="form-control" id="input"/>
            <span asp-validation-for="confirmPassword"></span>
        </div>
    <div id="Button">
        <input type="submit" value="Submit" formaction="Reset" class="btn btn-default"/>
    </div>
    </form>
</div>

@section scripts{
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}