@model Web4.Models.SecondRegisterStageModel

@{
    ViewData["Title"] = "Reset your password";
}

<style>
#Button{
    margin-top:15px;
}
</style>


<div>
    <h1>Reset your password</h1>

    <form method = "post" id="formTextBox" name="formTextBox" action="">
    <div>
    <label for="input">Email</label>
    <input type="text" asp-for="email" class="form-control" id="input"/>
    <span asp-validation-for="email"></span>
    </div>
    <div id="Button">
        <input type="submit" value="Send me a code" formaction="Reset" class="btn btn-primary"/>
        <input type="submit" value="I have a code" formaction="Reset" class="btn btn-default"/>
    </div>
</form>
</div>

@section scripts{
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}