<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web6</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web6.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-secondary" asp-area="" asp-controller="Home" asp-action="Index">Web6</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <div class="navbar-nav me-auto mb-lg-0">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Blog</a>
                        <a class="nav-link" asp-area="" asp-controller="Mockups" asp-action="Index">Mockups</a>
                    </div>
                    <div class="navbar-nav">
                        @if(User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link" asp-area="">Hello, @User.Identity.Name</a>
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="LogOut">Logout</a>
                        }
                        else
                        {
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="LogIn">Log in</a>
                        }  
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <hr/>
        <footer>       
            &copy; 2022 - Web6    
        </footer>
    </div>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
