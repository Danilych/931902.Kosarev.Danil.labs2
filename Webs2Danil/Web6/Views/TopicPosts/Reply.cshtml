@model Web6.Models.TopicPost

@{
    ViewData["Title"] = "Reply";
}

<h1>Reply to topic</h1>

<h4>TopicPost</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Reply">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="TopicMessage1" class="control-label"></label>
                <textarea asp-for="TopicMessage1" class="form-control" ></textarea>
                <span asp-validation-for="TopicMessage1" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TopicMessage2" class="control-label"></label>
                <textarea asp-for="TopicMessage2" class="form-control" ></textarea>
                <span asp-validation-for="TopicMessage2" class="text-danger"></span>
            </div>
            <div style="display:none;">
                <input type="hidden"  asp-for="TopicId" class="form-control" value = "@ViewBag.TopicId"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Reply" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Mockups" asp-action="SingleTopic" asp-route-id="@ViewBag.TopicId">Back to topic</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
