@model Web6.Models.Topic

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Topic</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TopicName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TopicName)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TopicCreator)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TopicCreator)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TopicCreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TopicCreationDate)
