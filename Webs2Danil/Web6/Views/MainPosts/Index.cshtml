@model IEnumerable<Web6.Models.MainPost>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TopicMessage1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TopicMessage2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TopicCreator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TopicCreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TopicEditDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TopicMessage1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopicMessage2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopicCreator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopicCreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopicEditDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
